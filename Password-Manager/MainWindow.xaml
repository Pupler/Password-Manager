<Window x:Class="Password_Manager.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Password_Manager"
        mc:Ignorable="d"
		WindowStyle="None"
		AllowsTransparency="True"
		Background="Transparent"
		FontFamily="Montserrat"
        Title="PasswordManager" Height="850" Width="700">

	<Grid Background="#1E1E1E">
		<Grid.RowDefinitions>
			<RowDefinition Height="30"/>
			<RowDefinition Height="Auto"/>
			<RowDefinition Height="*"/>
		</Grid.RowDefinitions>

		<!-- Custom panel -->
		<Border Grid.Row="0" Height="30" Background="#2D2D30" MouseLeftButtonDown="Border_MouseLeftButtonDown">
			<Grid>
				<StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="10,0,0,0">
					<TextBlock Text="Password Manager" Foreground="White" FontSize="12" VerticalAlignment="Center"/>
				</StackPanel>

				<StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
					<Button Content="_" Width="30" Height="30" Background="Transparent"
							Foreground="White" BorderThickness="0" Click="Minimize_Click"/>
					<Button Content="✕" Width="30" Height="30" Background="Transparent"
							Foreground="White" BorderThickness="0" Click="Close_Click"/>
				</StackPanel>
			</Grid>
		</Border>

		<!-- Header -->
		<Border Grid.Row="1" Background="#2D2D30" Padding="20">
			<StackPanel>
				<TextBlock Text="🔐 PasswordManager"
                          FontSize="28" FontWeight="Bold"
                          Foreground="#00D4AA"
                          HorizontalAlignment="Center"/>
				<TextBlock Text="Your secure password vault"
                          FontSize="14" Foreground="#CCCCCC"
                          HorizontalAlignment="Center" Margin="0,5,0,0"/>
			</StackPanel>
		</Border>

		<!-- Main Content -->
		<StackPanel Grid.Row="2" Margin="30,25,30,20">

			<!-- Input Card -->
			<Border Background="#252526" Padding="20" Margin="0,0,0,20">
				<StackPanel>
					<TextBlock Text="Store New Password" FontSize="16" FontWeight="SemiBold"
                              Foreground="#00D4AA" Margin="0,0,0,15"/>

					<TextBox x:Name="txtService" Padding="12" FontSize="14"
                            Background="#3E3E42" Foreground="White" BorderThickness="0"
                            Text="Service" Margin="0,0,0,10"/>

					<TextBox x:Name="txtUsername" Padding="12" FontSize="14"
                            Background="#3E3E42" Foreground="White" BorderThickness="0"
                            Text="Username" Margin="0,0,0,10"/>
					
					<Grid Margin="0,0,0,15">
						<Grid.ColumnDefinitions>
							<ColumnDefinition Width="*"/>
							<ColumnDefinition Width="Auto"/>
						</Grid.ColumnDefinitions>

						<TextBox x:Name="txtPassword" Grid.Column="0" Padding="12" FontSize="14"
								Background="#3E3E42" Foreground="White" BorderThickness="0"
								Text="Password" VerticalAlignment="Center"/>

						<Button x:Name="btnGenerate" Grid.Column="1" Content="🎲 Generate"
								Click="btnGenerate_Click" Background="#0078D7"
								Foreground="White" Padding="15,0"/>
					</Grid>

					<Button x:Name="btnAdd" Content="➕ Add Password"
                           Click="btnAdd_Click" Height="42" FontSize="14" FontWeight="SemiBold"
                           Background="#00D4AA" Foreground="#1E1E1E" BorderThickness="0"/>
				</StackPanel>
			</Border>

			<!-- Passwords List -->
			
			<Border Background="#252526" Padding="20">
				<StackPanel>
					
					<TextBlock Text="Stored Passwords" FontSize="16" FontWeight="SemiBold"
                              Foreground="#00D4AA" Margin="0,0,0,10"/>

					<TextBox x:Name="passwordSearch_input" Padding="12" FontSize="14"
							 Background="#3E3E42" Foreground="White" BorderThickness="0"
							 Text="Search..." TextChanged="passwordSearch"/>

					<ListBox x:Name="listPasswords" Height="220"
							 Background="#2D2D30" BorderThickness="0" Foreground="White"
							 ScrollViewer.HorizontalScrollBarVisibility="Disabled">
						<ListBox.ItemContainerStyle>
							<Style TargetType="ListBoxItem">
								<Setter Property="HorizontalContentAlignment" Value="Stretch"/>
							</Style>
						</ListBox.ItemContainerStyle>
						<ListBox.ItemTemplate>
							<DataTemplate>
								<Border Background="#3E3E42" Margin="2" Padding="12">
									<Grid>
										<TextBlock Text="{Binding}" FontSize="13" Foreground="White" VerticalAlignment="Center"/>
										
										<Button Content="📋" Padding="2" FontSize="20" Background="Transparent" HorizontalAlignment="Right"
												Foreground="White" BorderThickness="1" Click="copyClick" Tag="{Binding}"/>
									</Grid>
								</Border>
							</DataTemplate>
						</ListBox.ItemTemplate>
					</ListBox>

					<Button x:Name="btnDelete" Content="🗑️ Delete Selected"
							Click="btnDelete_Click" Height="40" Background="#D13438"
							Foreground="White" Margin="0,10,0,0"/>
					
				</StackPanel>
			</Border>
			
		</StackPanel>
	</Grid>
</Window>